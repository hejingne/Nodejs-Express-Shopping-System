extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Style:
      input#name.form-control(type='text', placeholder='Contemporary, Formal etc.' name='name' value=(undefined===style ? '' : style.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
